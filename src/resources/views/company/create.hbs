<div class="container-edit mt-5">
    <div class="row justify-content-center">
        <div class="col-10 mt-3">
            <div class="head-body px-3 py-2 rounded ms-1 text-white text-center fs-3">
                Tạo thông tin tài khoản
                </div>
            <div class="row mt-3 bg-com pb-3 mx-1">
                <div class="col-6 pe-3">
                    <span class="" id="">Tên công ty</span>
                    <form action="/company/store" method="POST">
                        <div class="input-group mb-2">
                            <input type="text" name="name" class="form-control" placeholder=""
                                aria-label="" aria-describedby="" required>
                        </div>

                        <div class="row mt-2">
                            <div class="col-6">
                                <span class="" id="">Số điện thoại</span>
                                <div class="input-group mb-2">
                                    <input type="text" name="phone" class="form-control"
                                        placeholder="" aria-label="" aria-describedby="" required>
                                </div>
                            </div>
                            <div class="col-6">
                                <span class="" id="">Ngày thành lập</span>
                                <div class="input-group mb-2">
                                    <input type="date" name="founding" class="form-control"
                                        placeholder="" aria-label="" aria-describedby="" required>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <span class="" id="">Địa chỉ làm việc</span>
                                <div class="input-group mb-2">
                                    <input type="text" name="address" class="form-control"
                                        placeholder="" aria-label="" aria-describedby="" required>
                            </div>

                            </div>
                            <div class="col-6">
                                <span class="" id="">Website</span>
                                <div class="input-group mb-2">
                                    <input type="text" name="weburl" class="form-control"
                                        placeholder="" aria-label="" aria-describedby="" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-group" hidden>
                                <input type="text" name="idcom" class="form-control" value="{{ user._id }}">
                            </div>
                        
                        </div>
                        <div class="d-flex justify-content-center mt-4">
                            <button type="submit" class="btn-submit rounded-pill text-wrap">
                                <p class="p-2 my-0 mx-5">
                                    Lưu lại
                                </p>
                            </button>
                        </div>
                </div>
                <div class="col-6 p-0">
                    <span class="" id="">Giới thiệu</span>
                    <div class="input-group mb-2">
                        <textarea type="text" name="introduce" id="introduce" class="form-control"></textarea>
                    </div>
                </div>
    </form>
            </div>
        </div>
    </div>

</div>

