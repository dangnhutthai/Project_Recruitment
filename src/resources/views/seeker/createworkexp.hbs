<div class="container-edit mt-5">
    <div class="row justify-content-center">
        <div class="col-6 mt-3">
             <span class="d-flex float-start mt-3 ms-3">
                    <a href="../account/{{user._id}}">
                        <i class="fa-solid fa-less-than fs-4 icon-hover" data-bs-toggle="tooltip"
                            data-bs-placement="top" title="Chỉnh sửa thông tin" style="color: #ffffff;"></i>
                        </i>
                    </a>
                </span>
            <div class="head-body px-3 py-2 rounded ms-1 text-white text-center fs-3">
                Kinh nghiệm làm việc
            </div>

            <div class="row mt-1 bg-com pb-3 mx-1 justify-content-center">
                <div class="col-10 pe-3">
                    <span class="" id="">Tên công ty</span>
                    <form action="../storeworkexp/{{user._id}}" method='POST'>
                        <div class="input-group mb-2">
                            <input type="text" name="companyname" class="form-control" placeholder="" aria-label=""
                                aria-describedby="" required>
                        </div>
                        <span class="" id="">Vị trí</span>

                        <div class="input-group mb-2">
                            <input type="text" name="position" class="form-control" placeholder="" aria-label=""
                                aria-describedby="" required>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <span class="" id="">Ngày làm việc</span>
                                <div class="input-group mb-2">
                                    <input type="date" name="startday" class="form-control" placeholder="" aria-label=""
                                        aria-describedby="" required>
                                </div>
                            </div>
                            <div class="col-6">
                                <span class="" id="">Ngày kết thúc</span>
                                <div class="input-group mb-2">
                                    <input type="date" name="endday" class="form-control" placeholder="" aria-label=""
                                        aria-describedby="" required>
                                </div>
                            </div>
                        </div>


                        <span class="" id="">Địa chỉ công ty</span>

                        <div class="input-group mb-2">
                            <input type="text" name="companyaddress" class="form-control" placeholder="" aria-label=""
                                aria-describedby="" required>
                        </div>


                        <div class="input-group mb-2">
                            <input type="text" name="idseeker" class="form-control" placeholder="" aria-label=""
                                aria-describedby="" value="{{ user._id }}" hidden>


                        </div>

                        <div class="d-flex justify-content-center mt-2">
                            <button type="submit" class="btn-submit rounded-pill text-wrap">
                                <p class="p-2 my-0 mx-5">
                                    Tạo
                                </p>
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>
