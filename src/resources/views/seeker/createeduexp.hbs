<div class="container-edit mt-5">
    <div class="row justify-content-center">
        <div class="col-6 mt-3">
             <span class="d-flex float-start mt-3 ms-3">
                    <a href="../account/{{user._id}}">
                        <i class="fa-solid fa-less-than fs-4 icon-hover" data-bs-toggle="tooltip"
                            data-bs-placement="top" title="Chỉnh sửa thông tin" style="color: #ffffff;"></i>
                        </i>
                    </a>
                </span>
            <div class="head-body px-3 py-2 rounded ms-1 text-white text-center fs-3">
                Trình độ học vấn
            </div>
            <div class="row mt-1 bg-com pb-3 mx-1 justify-content-center">
                <div class="col-10 pe-3">
                    <span class="" id="">Bằng cấp</span>
                    <form action="../storeeduexp/{{user._id}}" method="POST">
                        <div class="input-group mb-2">
                            <input type="text" name="certificate" class="form-control" placeholder="" aria-label=""
                                aria-describedby="" required>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6">
                                <span class="" id="">Ngành</span>
                                <div class="input-group mb-2">
                                    <input type="text" name="brand" class="form-control" placeholder="" aria-label=""
                                        aria-describedby="" required>
                                </div>
                            </div>
                            <div class="col-6">
                                <span class="" id="">Ngày nhận bằng</span>
                                <div class="input-group mb-2">
                                    <input type="date" name="graduationday" class="form-control" placeholder=""
                                        aria-label="" aria-describedby="" required>
                                </div>

                            </div>
                        </div>


                        <span class="" id="">Nơi cấp bằng</span>
                        <div class="input-group mb-2">
                            <input type="text" name="school" class="form-control" placeholder="" aria-label=""
                                aria-describedby="" required>
                        </div>
                        <div class="input-group mb-2">
                            <input type="text" name="idseeker" class="form-control" placeholder="" aria-label=""
                                aria-describedby="" value="{{ user._id }}" hidden>


                        </div>
                            
                            <div class="d-flex justify-content-center mt-2">
                                <button type="submit" class="btn-submit rounded-pill text-wrap">
                                    <p class="p-2 my-0 mx-5">
                                        Tạo
                                    </p>
                                </button>
                            </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

