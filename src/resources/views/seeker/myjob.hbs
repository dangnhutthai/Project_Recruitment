<div class="div mt-4" style="height: 450px;">
    <div class="row justify-content-evenly">
        <div class="col-10">
           

                <span class="d-flex float-start mt-3 ms-3">
                    <a href="/">
                        <i class="fa-solid fa-less-than fs-4 icon-hover" data-bs-toggle="tooltip"
                            data-bs-placement="top" title="Chỉnh sửa thông tin" style="color: #ffffff;"></i>
                        </i>
                    </a>
                </span>
                <div class="head-body px-3 pt-2 rounded ms-1 text-white text-center fs-3">Việc làm của tôi
                </div>
         
            <div class="row bg-com mx-1 my-2 pb-2 mb-2">
                <div class="row">

                    {{#if works}}
                    {{#each works }}
                    <div class="col-4 p-0 m-0 text-dark">
                        <div class="card-2 border rounded px-1" style="width: 18rem; height: 180px">
                            <div class="card-body-2">
                                <h5 class="card-title">{{this.name}}</h5>
                                <p class="card-text">Ngày ứng tuyển: {{convert this.applydate}}</p>

                            </div>
                            <div class="d-flex align-items-center button-details">

                                <div class="mt-3">
                                    {{#if (isApply this.isAccept)}}
                                    Tình trạng: <p class="text-danger">Chưa được duyệt</p>
                                    {{else}}
                                    Tình trạng: <p class="text-success">Đã duyệt hồ sơ</p>
                                    {{/if}}
                                </div>
                                <a href="/job/{{this.slug}}" class="btn btn-submit ms-3 mb-3">Chi tiết</a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    {{else}}
                    <div class="text-center">
                        <p class="fs-4 my-3">Bạn chưa ứng tuyển công việc nào</p>
                        <div class="my-3">

                            <i class="fa-solid fa-hourglass fs-1" style="color: #595993;"></i>
                        </div>
                        <a href="/" class="text-decoration-none fs-5">Tìm việc ngay!!</a>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>