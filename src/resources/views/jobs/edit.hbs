    var editor = ClassicEditor
        .create(document.querySelector('#description'), {
            updateSourceElementOnDestroy: true,
        })
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
    var editor2 = ClassicEditor
        .create(document.querySelector('#requirement'), {
            updateSourceElementOnDestroy: true,
        })
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
    var editor3 = ClassicEditor
        .create(document.querySelector('#benefit'), {
            updateSourceElementOnDestroy: true,
        })
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>